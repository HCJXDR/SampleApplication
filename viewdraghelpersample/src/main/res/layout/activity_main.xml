<?xml version="1.0" encoding="utf-8"?>
<com.example.viewdraghelpersample.ViewDragHelperLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.viewdraghelpersample.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Hello World!1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Hello World!2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Hello World!3" />

    <com.example.viewdraghelpersample.ScrollTextView
        android:id="@+id/stv"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="scrollTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="click me" />
</com.example.viewdraghelpersample.ViewDragHelperLayout>
