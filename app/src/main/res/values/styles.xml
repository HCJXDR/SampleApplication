<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_blue_300</item>
        <item name="colorPrimaryDark">@color/material_lime_100</item>
        <item name="android:windowBackground">@color/material_red_100</item>
        <item name="android:textColorPrimary">@color/material_green_100</item>
        <item name="colorAccent">@color/material_orange_A400</item>
    </style>

    <style name="item_pay_channel_desc_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#bbb</item>
    </style>

    <style name="GridPasswordView.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GridPasswordView" />

    <style name="GridPasswordView.EditText" parent="GridPasswordView.TextView">
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="GridPasswordView.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>
</resources>
