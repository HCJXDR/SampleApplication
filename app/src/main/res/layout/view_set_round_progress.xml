<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:round_progress="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.think.linxuanxuan.sampleapplication.other.RoundProgressView
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="100元"
            round_progress:innerColor="#f9cc"
            round_progress:innerRadius="10dp"
            round_progress:outerRadius="15dp" />

        <include
            layout="@layout/view_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <com.think.linxuanxuan.sampleapplication.other.RoundProgressView
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200元"
            round_progress:innerColor="#f9cc"
            round_progress:innerRadius="10dp"
            round_progress:outerRadius="15dp" />

        <include
            layout="@layout/view_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp" />

        <com.think.linxuanxuan.sampleapplication.other.RoundProgressView
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300元"
            round_progress:innerColor="#f9cc"
            round_progress:innerRadius="10dp"
            round_progress:outerRadius="15dp" />

        <include
            layout="@layout/view_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp" />

        <com.think.linxuanxuan.sampleapplication.other.RoundProgressView
            android:id="@+id/rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400元"
            round_progress:innerColor="#f9cc"
            round_progress:innerRadius="10dp"
            round_progress:outerRadius="15dp" />

        <include
            layout="@layout/view_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp" />

        <com.think.linxuanxuan.sampleapplication.other.RoundProgressView
            android:id="@+id/rb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500元"
            round_progress:innerColor="#f9cc"
            round_progress:innerRadius="10dp"
            round_progress:outerRadius="15dp" />

    </RadioGroup>

</LinearLayout>