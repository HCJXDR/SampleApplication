<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">

        <Button android:id="@+id/btn_writememory" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="accessFile"
                android:text="写文件到内存卡上"/>

        <Button android:id="@+id/btn_readmemory" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="accessFile"
                android:text="从内存卡上读文件"/>

        <TextView android:id="@+id/tv_memory" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="#aabbcc"/>

        <Button android:id="@+id/btn_writesd" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="accessFile"
                android:text="写文件到sd卡上"/>

        <Button android:id="@+id/btn_readsd" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="accessFile"
                android:text="从sd卡上读文件"/>

        <ImageView android:id="@+id/iv_sd" android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:scaleType="fitCenter"/>

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="#aabbcc"/>

        <Button android:id="@+id/btn_sax_xml" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="accessFile"
                android:text="使用sax解析xml文件"/>

        <TextView android:id="@+id/tv_sax_xml" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="#aabbcc"/>

    </LinearLayout>

</ScrollView>