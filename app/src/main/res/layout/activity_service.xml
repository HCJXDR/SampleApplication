<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button android:id="@+id/btn_start"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:onClick="serviceClick"
            android:text="start service_计数数字"/>

    <Button android:id="@+id/btn_stop"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:onClick="serviceClick"
            android:text="stop service_计数数字"/>

    <TextView android:id="@+id/tv_num" android:layout_width="wrap_content"
              android:layout_marginLeft="20dp"
              android:textSize="25dp"
              android:layout_height="wrap_content"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#000000"/>

    <Button android:id="@+id/btn_bind"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:onClick="serviceClick"
            android:text="bind service_计数字母"/>

    <Button android:id="@+id/btn_unbind"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:onClick="serviceClick"
            android:text="unbind service2_计数字母"/>

    <TextView android:id="@+id/tv_char" android:layout_width="wrap_content"
              android:layout_marginLeft="20dp"
              android:textSize="25dp"
              android:layout_height="wrap_content"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#000000"/>

</LinearLayout>