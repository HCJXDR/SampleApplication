<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">#FD87A9</item>
    </style>

    <style name="menuTextAppearance">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="counterText">
        <item name="android:textColor">#aa5353cc</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">#ff0000</item>
    </style>

    <declare-styleable name="ToolbarFAB">
        <attr name="showDuration" format="integer"/>
        <attr name="hideDuration" format="integer"/>
        <attr name="bottomMargin" format="dimension"/>
        <attr name="rightMargin" format="dimension"/>
        <attr name="fadeInPivotX" format="dimension"/>
        <attr name="fadeInPivotY" format="dimension"/>
        <attr name="fadeInFraction" format="float"/>
        <attr name="fabId" format="reference"/>
        <attr name="containerId" format="reference"/>
        <attr name="fabToolbarId" format="reference"/>
        <attr name="fabDrawableAnimationEnabled" format="boolean"/>
    </declare-styleable>

</resources>
